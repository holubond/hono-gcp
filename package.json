{
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "docker:build": "docker build -t hono-api-img .",
    "docker:clean": "docker stop hono-api && docker rm hono-api",
    "docker:start": "docker run -it --name hono-api -p 3000:3000 hono-api-img"
  },
  "dependencies": {
    "@hono/node-server": "^1.11.2",
    "hono": "^4.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5"
  }
}
